@model BigBearGames.Models.Article
@{
    ViewBag.Title = "Index";
}


<head>
    <script src="//cloud.tinymce.com/stable/tinymce.min.js?apiKey=co1qlv6p5p5ah95lxnpj4fm97rg154tdychu852nudzi1bdp"></script>
    <script>
tinymce.init({
    selector: 'textarea',
    height: 500,
    menubar: false,
    plugins: [
      'advlist autolink lists link image charmap print preview anchor',
      'searchreplace visualblocks code fullscreen',
      'insertdatetime media table contextmenu paste code'
    ],
    toolbar: 'undo redo | insert | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image',
    content_css: '//www.tinymce.com/css/codepen.min.css'
});</script>
</head>


@Html.ValidationSummary()

@using (@Html.BeginForm())
{

    <div form-group>
        <label>Title</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>
    <div form-group>
        <label>Type</label>
        @Html.EnumDropDownListFor(x => x.ArticleType, new { @class = "form-control" })
    </div>
    <div form-group>
        <label>Description</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    </div>
    <div form-group>
        <label>Thumbnail Image Url</label>
        @Html.TextBoxFor(x => x.ImgPath, new { @class = "form-control" })
    </div>
    <div style="padding-top:20px">
        @Html.TextAreaFor(x => x.Body)
    </div>

    <button type="submit" class="btn btn-primary">Post</button>
}





